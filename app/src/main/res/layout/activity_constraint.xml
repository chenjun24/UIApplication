<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.constrait.ConstraintActivity">
   <TextView
       android:textColor="@color/design_default_color_error"
       android:id="@+id/tv1"
       android:textSize="24dp"
       android:text="基本方向约束"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textColor="@color/design_default_color_error"
        android:id="@+id/tv2"
        android:textSize="20dp"
        android:text="基线对齐"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv3"
        android:textSize="28dp"
        android:text="20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:text="$"
        app:layout_constraintStart_toEndOf="@id/tv3"
        app:layout_constraintBaseline_toBaselineOf="@id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/design_default_color_error"
        android:id="@+id/tv4"
        android:textSize="20dp"
        android:text="角度约束"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv5"
        android:textSize="20dp"
        android:text="控件1位置"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/iv1"
        android:src="@drawable/ic_baseline_call_24"
        app:layout_constraintCircle="@id/tv5"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/design_default_color_error"
        android:id="@+id/tv6"
        android:textSize="20dp"
        android:text="百分比偏移"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintVertical_bias="0.8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/design_default_color_error"
        android:id="@+id/tv7"
        android:textSize="20dp"
        android:text="go margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv8"
        android:visibility="visible"
        android:textSize="20dp"
        android:text="A隐藏时 B的go margin 生效"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textColor="@color/design_default_color_secondary"
        android:id="@+id/tv9"
        android:textSize="20dp"
        android:text="B"
        app:layout_constraintTop_toBottomOf="@id/tv7"
        app:layout_constraintStart_toEndOf="@id/tv8"
        app:layout_goneMarginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/design_default_color_error"
        android:id="@+id/tv10"
        android:textSize="20dp"
        android:text="0dp(MATCH_CONSTRAINT)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginEnd="50dp"
        android:id="@+id/tv11"
        android:textSize="20dp"
        android:text="spread"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv10"
        app:layout_constraintWidth_default="spread"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginEnd="100dp"
        android:id="@+id/tv12"
        android:textSize="20dp"
        android:text="percent"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv11"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent="0.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
 <TextView
     android:textColor="@color/design_default_color_error"
     android:id="@+id/tv13"
     android:textSize="20dp"
     android:text="宽高比"
     app:layout_constraintStart_toStartOf="parent"
     app:layout_constraintTop_toBottomOf="@id/tv12"
     app:layout_constraintDimensionRatio="4:1"
     android:layout_width="0dp"
     android:layout_height="100dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>